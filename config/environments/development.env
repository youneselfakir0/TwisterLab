# TwisterLab Development Environment Configuration
# Copy to .env and modify as needed

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Database
DATABASE_URL=postgresql+asyncpg://twisterlab:twisterlab@localhost:5432/twisterlab_dev
DATABASE_ECHO=true

# Redis
REDIS_URL=redis://localhost:6379/0

# Security (development only - use strong secrets in production!)
SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Ollama (Local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# MCP Server
MCP_SERVER_NAME=twisterlab-dev
MCP_SERVER_VERSION=0.1.0

# CORS (allow all in development)
CORS_ORIGINS=*

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Feature Flags
FEATURE_BROWSER_AUTOMATION=true
FEATURE_MCP_INTEGRATION=true
