# TwisterLab Production Environment Configuration
# IMPORTANT: Never commit actual secrets to version control!
# Use environment variable substitution or secrets management

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Database (use managed database with SSL)
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/twisterlab_prod?ssl=require
DATABASE_ECHO=false

# Redis (use managed Redis)
REDIS_URL=rediss://${REDIS_USER}:${REDIS_PASSWORD}@${REDIS_HOST}:6379/0

# Security (MUST be set via secrets management)
SECRET_KEY=${SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=15

# Ollama (production deployment)
OLLAMA_HOST=${OLLAMA_HOST}
OLLAMA_MODEL=llama3.2

# MCP Server
MCP_SERVER_NAME=twisterlab-prod
MCP_SERVER_VERSION=0.1.0

# CORS (strict production origins only)
CORS_ORIGINS=https://twisterlab.io,https://app.twisterlab.io

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Feature Flags
FEATURE_BROWSER_AUTOMATION=true
FEATURE_MCP_INTEGRATION=true

# Rate Limiting (future)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
