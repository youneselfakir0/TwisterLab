# TwisterLab Staging Environment Configuration
# Use for pre-production testing

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
API_RELOAD=false

# Database (use managed database)
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/twisterlab_staging
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://${REDIS_HOST}:6379/0

# Security
SECRET_KEY=${SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Ollama
OLLAMA_HOST=${OLLAMA_HOST:-http://ollama:11434}
OLLAMA_MODEL=llama3.2

# MCP Server
MCP_SERVER_NAME=twisterlab-staging
MCP_SERVER_VERSION=0.1.0

# CORS (restrict to known origins)
CORS_ORIGINS=https://staging.twisterlab.io,http://localhost:3000

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Feature Flags
FEATURE_BROWSER_AUTOMATION=true
FEATURE_MCP_INTEGRATION=true
