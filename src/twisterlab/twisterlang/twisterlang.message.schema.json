{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "twisterlang_version": {
      "type": "string",
      "description": "Version of the TwisterLang protocol."
    },
    "correlation_id": {
      "type": "string",
      "description": "Unique identifier for correlating messages."
    },
    "message_type": {
      "type": "string",
      "enum": ["request", "response", "notification"],
      "description": "Type of the message."
    },
    "payload": {
      "type": "object",
      "description": "The actual data being sent in the message.",
      "additionalProperties": true
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "The time at which the message was created."
    }
  },
  "required": ["twisterlang_version", "correlation_id", "message_type", "payload", "timestamp"]
}
